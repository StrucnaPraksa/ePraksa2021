@model PracticeManagement.Core.ViewModel.StudentRateFormViewModel

@{
    ViewBag.Title = "StudentRate form";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3>Add Student Rate</h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- "RegisterStudentRate" , "Account "        "Add", "StudentRates "        -->
                @using (Html.BeginForm(Model.Action, "StudentRates", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
                {
            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Id)
                                            <div class=" form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Student kojeg želite ocjeniti : <span class="required">*</span></label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @Html.DropDownListFor(m => m.StudentsID, new SelectList(Model.Students, "Id", "Firstname"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                                                    @Html.ValidationMessageFor(m => m.StudentsID)
                                                </div>
                                            </div>
                                                            <div class=" form-group">
                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Mentor koji daje ocjenu : <span class="required">*</span></label>
                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                    @Html.DropDownListFor(m => m.MentorsID, new SelectList(Model.Mentors, "Id", "Name"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                                                                    @Html.ValidationMessageFor(m => m.MentorsID)
                                                                </div>
                                                            </div>
                                                                                            <div class=" form-group">
                                                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Stručna praksa : <span class="required">*</span></label>
                                                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                                                    @Html.DropDownListFor(m => m.InternshipsID, new SelectList(Model.Internships, "Id", "Description"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                                                                                                    @Html.ValidationMessageFor(m => m.InternshipsID)
                                                                                                </div>
                                                                                            </div>
                                                                                                            <div class="form-group">
                                                                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Student je kvalitetno, precizno i temeljito izvršio radne zadatke. <span class="required">*</span></label>
                                                                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                                                                    @Html.TextBoxFor(m => m.A1, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                                                                                                                    @Html.ValidationMessageFor(m => m.A1)
                                                                                                                </div>
                                                                                                            </div>
                                                                                                                            <div class="form-group">
                                                                                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Student je pokazao sposobnost učenja, shvaćanja i preuzimanja novih vještina i ideja. <span class="required">*</span></label>
                                                                                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                                                                                    @Html.TextBoxFor(m => m.A2, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                                                                                                                                    @Html.ValidationMessageFor(m => m.A2)
                                                                                                                                </div>
                                                                                                                            </div>
                                                                                                                                            <div class="form-group">
                                                                                                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Student je pokazao sposobnost preuzimanja inicijative, kreiranja ideja i traženja novih zadataka. <span class="required">*</span></label>
                                                                                                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                                                                                                    @Html.TextBoxFor(m => m.A3, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                                                                                                                                                    @Html.ValidationMessageFor(m => m.A3)
                                                                                                                                                </div>
                                                                                                                                            </div>
                                                                                                                                                            <div class=" form-group">
                                                                                                                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Student je pokazao pouzdanost, savjesnost, točnost i prisutnost na poslu.  <span class="required">*</span></label>
                                                                                                                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                                                                                                                    @Html.TextBoxFor(m => m.A4, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                                                                                                                                                                    @Html.ValidationMessageFor(m => m.A4)
                                                                                                                                                                </div>
                                                                                                                                                            </div>
                                                                                                                                                                            <div class=" form-group">
                                                                                                                                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Student je pokazao sposobnost timskog rada. <span class="required">*</span></label>
                                                                                                                                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                                                                                                                                    @Html.TextBoxFor(m => m.A5, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                                                                                                                                                                                    @Html.ValidationMessageFor(m => m.A5)
                                                                                                                                                                                </div>
                                                                                                                                                                            </div>
                                                                                                                                                                                            <div class=" form-group">
                                                                                                                                                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Ukupna ocjena <span class="required">*</span></label>
                                                                                                                                                                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                                                                                                                                                                    @Html.TextBoxFor(m => m.Rate, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                                                                                                                                                                                                    @Html.ValidationMessageFor(m => m.Rate)
                                                                                                                                                                                                </div>
                                                                                                                                                                                            </div> 

                                                                                                                                                                                                            <div class="ln_solid"></div>
                                                                                                                                                                                                                            <div class="form-group">
                                                                                                                                                                                                                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                                                                                                                                                                                                                                    <button type="submit" class="btn btn-success">Save</button>
                                                                                                                                                                                                                                </div>
                                                                                                                                                                                                                            </div>}
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}