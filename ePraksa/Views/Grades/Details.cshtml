                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>*@

            <div class="x_content">
                <div class="col-md-3 col-sm-3 col-xs-12 profile_left ">


                    <h2>Rates and Comments</h2>

                    <h4>Attendance Grades: @Model.Grade.PGrade1 ; @Model.Grade.MGrade1 </h4>

                    <h4>Commitment Grades: @Model.Grade.PGrade2 ; @Model.Grade.MGrade2 </h4>

                    <h4>Knowledge Grades: @Model.Grade.PGrade3 ; @Model.Grade.MGrade3 </h4>

                    <h4>Profesor Comment: @Model.Grade.ProfesorComment </h4>

                    <h4>Mentor Comment: @Model.Grade.MentorComment </h4>



                    <br />
                    <a href="@Url.Action("Index","Grades")" class="btn btn-default">Back</a>
                </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function(){
            $("#patientID").on("click", function () {
                var link = $(this);
                $.ajaxSetup({ cache: false });
                var detailUrl = "/Appointments/Details/" + link.attr("data-appointment-id");
                $("#MyModalContent").load(detailUrl, function () {
                    $("#MyModal").modal({
                        keyboard: false
                    }, 'show');

                });
                return false;
            });
            $("#attendanceID").on("click", function () {
                var link = $(this);
                $.ajaxSetup({ cache: false });
                var detailUrl = "/Attendances/Details/" + link.attr("data-attendance-id");
                $("#MyModalContent").load(detailUrl, function () {
                    $("#MyModal").modal({
                        keyboard: false
                    }, 'show');

                });
                return false;
            });


        });

        $('.dataTables').DataTable({
            "scrollY": "300px",
            "scrollCollapse": true,
            "paging": false,
            "filter": false,
            "info": false
        });
    </script>
 
}





