@model PracticeManagement.Core.ViewModel.GradeFormViewModel
@{
    ViewBag.Title = "Add";
}
<div class="row ">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
            <div class="x_content">
                @using (Html.BeginForm(Model.Action, "Grades", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
                {


                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <span class="section">Add New</span>
                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Practice<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.PracticeId, new SelectList(Model.Internships, "Id", "Description"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.PracticeId)
                        </div>
                    </div>
                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Student<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.StudentId, new SelectList(Model.Students, "Id", "Firstname"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.StudentId)
                        </div>
                    </div>
                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Profesor <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.ProfesorId, new SelectList(Model.Profesors, "Id", "Name"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.ProfesorId)
                        </div>
                    </div>
                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Mentor<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.MentorId, new SelectList(Model.Mentors, "Id", "Name"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.MentorId)
                        </div>
                    </div>
                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Firm<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.FirmId, new SelectList(Model.Firms, "Id", "Name"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.FirmId)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Profesor Grade : Attendance <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.PGrade1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PGrade1)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Profesor Grade : Commitment <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.PGrade2, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PGrade2)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Profesor Grade : Knowledge <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.PGrade3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PGrade3)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Mentor Grade : Attendance <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.MGrade1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MGrade1)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Mentor Grade : Commitment <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.MGrade2, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MGrade2)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Mentor Grade : Knowledge <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.MGrade3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MGrade3)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Profesor Comment<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.ProfesorComment, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.ProfesorComment)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Mentor Comment<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.MentorComment, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.MentorComment)
                        </div>
                    </div>



                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                            <a href="@Url.Action("Index","Grades")" class="btn btn-default">Back</a>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>

                }


            </div>
        </div>
    </div>

</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {

            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                //clearBtn: true,
                todayHighlight: true,
                //todayBtn: true,
                //todayBtn: 'linked',
                orientation: "top left",
                autoclose: true
            });

        });
    </script>

}





