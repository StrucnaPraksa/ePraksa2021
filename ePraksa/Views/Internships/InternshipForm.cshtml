@model PracticeManagement.Core.ViewModel.InternshipFormViewModel

<div class="row ">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
            <div class="x_content">
                @using (Html.BeginForm(Model.Action, "Internships", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" })) {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)


                    <span class="section">Unos nove stručne prakse</span>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Naziv stručne prakse <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Opis stručne prakse </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Plan stručne prakse </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Plan, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.Plan)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Kriteriji za stručnu praksu </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Criteria, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.Criteria)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Vrsta stručne prakse </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Type, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.Type)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Veličina stručne prakse </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Size, new { @class = "form-control col-md-7 col-xs-12", autofocus = "true" })
                            @Html.ValidationMessageFor(m => m.Size)
                        </div>
                    </div>

                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Profesor <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.Profesor, new SelectList(Model.Profesors, "Id", "Name"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.Profesor)
                        </div>
                    </div>

                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Godina studija <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.YearOfStudy, new SelectList(Model.YearOfStudies, "Id", "Year"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.YearOfStudy)
                        </div>
                    </div>

                    <div class=" form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Smjer obrazovanja <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.FacultyCourse, new SelectList(Model.FacultyCourses, "Id", "Course"), "Select", new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.FacultyCourse)
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                            <a href="@Url.Action("Index","Internships")" class="btn btn-default">Back</a>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>






